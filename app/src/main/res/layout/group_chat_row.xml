<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<data>

    <variable
        name="groupModel"
        type="com.norgic.vdotokcall_mtm.models.GroupModel"/>

    <variable
        name="participantsNames"
        type="String"/>

</data>


<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/groupView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/groupTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/manrope_medium_500"
        android:textColor="@color/black_2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@+id/imgAudioCall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Group name" />

    <ImageView
        android:id="@+id/imgAudioCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_call"
        android:contentDescription="@string/description_call"
        android:padding="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/groupTitle"
        app:layout_constraintEnd_toStartOf="@id/imgVideoCall" />

    <ImageView
        android:id="@+id/imgVideoCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_video_call"
        android:contentDescription="@string/description_call"
        android:layout_marginTop="4dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_more" />


    <ImageView
        android:id="@+id/img_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more"
        android:padding="8dp"
        android:contentDescription="@string/description_image_more_chat_group_options"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.7dp"
        android:background="@color/divider_color"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@id/groupTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>